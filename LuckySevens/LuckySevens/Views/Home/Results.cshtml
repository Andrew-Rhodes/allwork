@model LuckySevens.Models.Player
@{
    ViewBag.Title = "Results";
}

<h2>Results</h2>

<p>Your starting bet was @Html.DisplayFor(m => m.StartingBet)</p>
<p>You rolled a total of @Html.DisplayFor(m => m.TimesRolled) times</p>
<p>Your highest winning total was @Html.DisplayFor(m => m.MaxWinnings)</p>
<p>You rolled your highest winnings on roll @Html.DisplayFor(m => m.MaxWinnigsRolled)</p>

<p>Want to play again @Html.ActionLink("Yes", "LuckySevensMVC", "Home")</p>